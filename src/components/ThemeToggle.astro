---

<label class:list={["switch", "toggle"]}>
    <label for="mode" style="display: none;"> Modo </label>
    <input type="checkbox" id="mode" />
    <span class="slider round"></span>
    <svg
        width="18px"
        height="18px"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        id="theme"
    >
        <path
            id="sun"
            fill-rule="evenodd"
            d="M12 17.5a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zm0 1.5a7 7 0 1 0 0-14 7 7 0 0 0 0 14zm12-7a.8.8 0 0 1-.8.8h-2.4a.8.8 0 0 1 0-1.6h2.4a.8.8 0 0 1 .8.8zM4 12a.8.8 0 0 1-.8.8H.8a.8.8 0 0 1 0-1.6h2.5a.8.8 0 0 1 .8.8zm16.5-8.5a.8.8 0 0 1 0 1l-1.8 1.8a.8.8 0 0 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM6.3 17.7a.8.8 0 0 1 0 1l-1.7 1.8a.8.8 0 1 1-1-1l1.7-1.8a.8.8 0 0 1 1 0zM12 0a.8.8 0 0 1 .8.8v2.5a.8.8 0 0 1-1.6 0V.8A.8.8 0 0 1 12 0zm0 20a.8.8 0 0 1 .8.8v2.4a.8.8 0 0 1-1.6 0v-2.4a.8.8 0 0 1 .8-.8zM3.5 3.5a.8.8 0 0 1 1 0l1.8 1.8a.8.8 0 1 1-1 1L3.5 4.6a.8.8 0 0 1 0-1zm14.2 14.2a.8.8 0 0 1 1 0l1.8 1.7a.8.8 0 0 1-1 1l-1.8-1.7a.8.8 0 0 1 0-1z"
        ></path>
        <path
            id="moon"
            fill-rule="evenodd"
            d="M16.5 6A10.5 10.5 0 0 1 4.7 16.4 8.5 8.5 0 1 0 16.4 4.7l.1 1.3zm-1.7-2a9 9 0 0 1 .2 2 9 9 0 0 1-11 8.8 9.4 9.4 0 0 1-.8-.3c-.4 0-.8.3-.7.7a10 10 0 0 0 .3.8 10 10 0 0 0 9.2 6 10 10 0 0 0 4-19.2 9.7 9.7 0 0 0-.9-.3c-.3-.1-.7.3-.6.7a9 9 0 0 1 .3.8z"
        ></path>
    </svg>
</label>

<style>

    .switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 25px;
        cursor: pointer;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: var(--bg-toggle-btn);
        -webkit-transition: 0.4s;
        transition: 0.4s;
    }

    .slider:before {
        display: block;
        position: absolute;
        content: "";
        height: 18px;
        width: 18px;
        left: 4px;
        top: 3px;

        background-color: var(--bg-pill);
        -webkit-transition: 0.4s;
        transition: 0.4s;
    }
    input:focus + .slider {
        box-shadow: 0 0 1px #000;
    }
    input:checked + .slider:before {
        -webkit-transform: translateX(25px);
        -ms-transform: translateX(25px);
        transform: translateX(25px);
    }

    .slider.round {
        border-radius: 20px;
    }

    .slider.round:before {
        border-radius: 50%;
    }
    svg{
        position: absolute;
        top: 3px;
    }
    :root[data-theme="light"] svg {
        right: 4px;
    }
    :root[data-theme="dark"] svg {
        left: 4px;
    }
    #moon {
        stroke: #fff;
        fill: #fff;
    }
    #sun {
        stroke: #000;
        fill: #000;
    }
</style>

<script is:inline>
    const toggle = document.querySelector(".switch");
    const mode = document.getElementById("mode");
    const sun = document.getElementById("sun");
    const moon = document.getElementById("moon");
    const themePreference = () => {
        const userPreference = window.matchMedia("(prefers-color-scheme: dark)")
            ? "dark"
            : "light";
        if (typeof localStorage !== "undefined")
            return localStorage.getItem("theme") ?? userPreference;
        return userPreference;
    };
    function setTheme() {
        if (
            (document.documentElement.dataset["theme"] ?? themePreference()) ==
            "dark"
        ) {
            document.documentElement.dataset["theme"] = "light";
            localStorage.setItem("theme", "light");
            mode.checked = false;
            updateIcon(false);
        } else {
            document.documentElement.dataset["theme"] = "dark";
            localStorage.setItem("theme", "dark");
            mode.checked = true;
            updateIcon(true);
        }
    }
    const updateIcon = (isDark) => {
        sun.style.display = isDark ? "block" : "none";
        moon.style.display = !isDark ? "block" : "none";
    };

    toggle.addEventListener("change", setTheme);
    if (themePreference() == "dark") {
        document.documentElement.dataset["theme"] = "dark";
        mode.checked = true;
        updateIcon(true);
    } else {
        document.documentElement.dataset["theme"] = "light";
        mode.checked = false;
        updateIcon(false);
    }
</script>
