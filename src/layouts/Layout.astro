---
import "@fontsource-variable/signika";
import { getLangFromUrl } from '@/i18n/utils';

interface Props {
	title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);

---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ingeniero electrÃ³nico y desarrollador backend con amplia experiencia en el desarrollo de aplicaciones web" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root,
	:root[data-theme="light"] {
		--bg-gradient: repeating-linear-gradient(45deg, rgb(255,255,255) 0px, rgb(255,255,255) 10px,transparent 10px, transparent 11px),repeating-linear-gradient(135deg, rgb(255,255,255) 0px, rgb(255,255,255) 10px,transparent 10px, transparent 11px),linear-gradient(90deg, hsl(256,7%,84%),hsl(256,7%,84%));

		--bg-color: rgb(241, 241, 243);
		--bg-language: rgb(237, 237, 237);
		--bg-pill: rgb(227, 227, 227);
		--bg-pill-90: rgba(237, 237, 237, 0.9);
		--bg-header-btn: rgb(29, 132, 181);
		--bg-toggle-btn: rgb(50, 48, 49);
		--bg-link-30: rgb(34, 34, 34, 0.3);
		--bg-btn: rgba(217, 217, 217, 0.25);
		--django-fill: rgb(0, 77, 64);
		--btn-shadow: rgb(6,6,6,0.25);
		--mysql-fill: rgb(0, 84, 107);
		--react-fill: rgb(0, 97, 114);

		/* --color-light: rgb(238, 238, 238); */
		--color-light: rgb(255, 255, 255);
		--color-link: rgb(34, 34, 34);
		--color-text: rgb(0, 0, 0);
		--color-text-lighter: rgb(51, 51, 51);
		--color-highlight: rgb(221, 107, 0);
		--color-highlight30: rgb(221, 107, 0, 0.3);
		--color-important: rgb(33, 88, 138);
		--color-headings: rgb(115, 115, 115);
	}
	:root[data-theme="dark"] {
		--bg-gradient: repeating-linear-gradient(45deg, rgb(13,13,14) 0px, rgb(13,13,14) 10px,transparent 10px, transparent 11px),repeating-linear-gradient(135deg, rgb(13,13,14) 0px, rgb(13,13,14) 10px,transparent 10px, transparent 11px),linear-gradient(90deg, rgb(33,33,33),rgb(33,33,33));
		/* --bg-gradient: radial-gradient(
				ellipse 90% 70% at 50% 120%,
				rgba(40, 40, 40, 0.3) 20%,
				rgba(30, 30, 30, 0.3) 70%,
				rgba(20, 20, 20, 0.3) 80%,
				rgba(12, 12, 13) 100%
			)
			no-repeat center / cover; */

		--bg-color: #0d0d0e;
		--bg-language: rgb(65, 67, 69);
		--bg-pill: rgb(65, 67, 69, 0.75);
		--bg-pill-90: rgba(65, 67, 69, 0.9);
		--bg-header-btn: rgb(221, 107, 0);
		--bg-toggle-btn: rgb(231, 234, 235);
		--bg-link-30: rgb(234, 234, 234, 0.3);
		--bg-btn: rgba(217, 217, 217, 0.2);
		--django-fill: rgb(0, 184, 153);
		--btn-shadow: rgb(255,255,255,0.2);
		--mysql-fill: rgb(0, 173, 255);
		--react-fill: rgb(0, 216, 255);
		--color-light: rgb(218, 218, 218);
		--color-link: rgb(238, 238, 238);
		--color-text: rgb(255, 255, 255);
		--color-text-lighter: rgb(238, 238, 238);
		--color-highlight: rgb(255, 163, 77);
		--color-highlight30: rgb(255, 163, 77,0.3);
		--color-important: rgb(0, 173, 255);
		--color-headings: rgb(191, 191, 191);
	}

	body {
		font-family: "Signika Variable", sans-serif;
		background: var(--bg-gradient);
		background-color: var(--bg-color);
		font-weight: 300;
		text-wrap: pretty;
		position: relative;
	}
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}
	.container {
		margin: auto;
		padding: 1rem;
		max-width: calc(100% - 2rem);
		line-height: 1.3;
	}
	.hide {
		display: none !important;
	}

	.heading{
        text-align: center;
        font-size: 2em;
        color: var(--color-headings);
        font-weight: 400;
    }
	@media screen and (min-width: 1200px) {
		.container {
			max-width: 1200px;
		}
	}
</style>
